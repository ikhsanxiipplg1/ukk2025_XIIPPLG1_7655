<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ikhsanukk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ikhsanukk">

        <!-- Aktivitas Utama (Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- Penting untuk launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".daftartugas" android:exported="false" />

        <!-- Aktivitas Register -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <!-- Tidak perlu diakses oleh aplikasi lain -->

    </application>

</manifest>